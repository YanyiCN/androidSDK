<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout
        android:id="@+id/runingLog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:background="@drawable/slot_title_bg"
        android:visibility="gone" >

        <ScrollView
            android:layout_width="160dp"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_runinglog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                />
        </ScrollView>
    </RelativeLayout>
   
    
   	<ImageButton 
      android:id="@+id/float_handle"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_toRightOf="@id/runingLog_content"
      android:src="@drawable/slot_bar_bg"
      />
    
    <RelativeLayout
        android:id="@+id/paramLog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/slot_title_bg"
        android:layout_below="@id/float_handle"
        android:layout_toRightOf="@id/runingLog_content"
        android:visibility="gone" >

        <ScrollView
            android:layout_width="150dp"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_paramlog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                />
        </ScrollView>
    </RelativeLayout>
    
    
   	<LinearLayout 
       android:id="@+id/float_layout"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@android:color/white"
       android:layout_toRightOf="@id/float_handle"
       android:visibility="gone"
       >
       <LinearLayout 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <ImageButton
	        android:id="@+id/btn_runing_log"
	        android:layout_width="50dp"
	        android:layout_height="50dp"
	        android:src="@drawable/slot_bar_bg"
	        android:layout_weight="1"/> 
	       <ImageButton
	        android:id="@+id/btn_param_log"
	        android:layout_width="50dp"
	        android:layout_height="50dp"
	        android:src="@drawable/slot_bar_bg" 
	        android:layout_weight="1"/> 
       </LinearLayout>
    </LinearLayout>
</RelativeLayout>